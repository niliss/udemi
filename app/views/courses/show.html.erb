<h1><%= @course.name %></h1>

<p><%= @course.description %></p> 

By:
<p><%= @course.owner.email %></p>


<% if current_user.id == @course.owner_id %>
        <%= link_to 'Edit Course', edit_course_path, :class => 'navbar-link' %>  
<% else %>
		<% if current_user.courses.include?(@course) %>
		<%= link_to 'Unsubscribe Course', unsubscribe_path, :class => 'navbar-link' %>
		<% else %>
        <%= link_to 'Subscribe Course', subscribe_path, :class => 'navbar-link' %>
        <% end %>
<% end %>